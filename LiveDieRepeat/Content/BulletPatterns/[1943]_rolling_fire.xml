<?xml version="1.0"?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
	<action label="top">
		<repeat>
			<times>5</times>
			<action>
				<fireRef label="shot" />
				<wait>$rand * 60</wait>
			</action>
		</repeat>
	</action>
	
	<fire label="shot">
		<bulletRef label="roll" />
	</fire>
	
	<bullet label="roll">
		<direction type="aim">(($rand * 50) - 25)</direction>
		<speed>2 + ($rank * ($rand*3))</speed>
		<action>
			<wait>30+$rand*20</wait>
			<changeDirection>
				<direction type="relative">-90</direction>
				<term>4</term>
			</changeDirection>
			<changeSpeed>
				<speed>3</speed>
				<term>4</term>
			</changeSpeed>
			<wait>4</wait>
			<changeDirection>
				<direction type="sequence">15</direction>
				<term>9999</term>
			</changeDirection>
			<wait>80+$rand*40</wait>
			<vanish />
		</action>
	</bullet>
</bulletml>